<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<div id="post">
  		  <%= render "book_comments/post", book: @book %>
  		</div>
        <div id="comments_area">
          <%= render 'book_comments/post_comment', book: @book %>
        </div>
      <div class="new-comment">
        <%= form_with model: [@book, @book_comment], local: false do |f| %>
          <%= f.text_area :comment, rows: '5', class: "w-100", id: "text_area" %>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>